@page "/"
@inject HttpClient Http
<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<h2>@_name</h2>
Welcome to your new app.

@code {
    private string _name = "";
    protected override async Task OnInitializedAsync()
    {
        try
        {
            _name = await Http.GetStringAsync("Function?name=Omar1");
        }catch(Exception ex)
        {
            _name = ex.ToString();
        }

    }
 }